Description=Apache Tomcat 10 Web Application Server
After=network.target

[Service]
Type=forking

User=tomcat
Group=tomcat

Environment="JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64"
Environment="CATALINA_HOME=homedirectory-after"
Environment="CATALINA_BASE=homedirectory-after"
Environment="CATALINA_PID=homedirectory-after/temp/tomcat.pid"
Environment="CATALINA_OPTS=-Xms512M -Xmx1024M -server -XX:+UseParallelGC"

ExecStart=homedirectory-after/bin/startup.sh
ExecStop=homedirectory-after/bin/shutdown.sh

[Install]
WantedBy=multi-user.target